{
  "name": "HP Search",
  "description": "Lookup HP devices to solve various user problems:  Connectivity, disassembly, Specifications, spares",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": [ "contextMenus", "storage", "clipboardRead", "clipboardWrite", "activeTab", "scripting",  "tabs" ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "hp16.png",  //"globalGoogle16.png",
    "48": "hp48.png",  //"globalGoogle48.png",
    "128": "hp128.png" // "globalGoogle128.png"
  }
}
